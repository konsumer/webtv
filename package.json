{
  "name": "webtv",
  "version": "1.0.0",
  "description": "web-based client for liteiptv",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --progress --quiet --hot --inline --no-info --content-base=./webroot",
    "build": "cross-env NODE_ENV=production webpack --progress",
    "deploy": "npm run build && git-directory-deploy --directory webroot --branch gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konsumer/webtv.git"
  },
  "author": "David Konsumer <konsumer@jetboystudio.com> (http://konsumer.js.org)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/konsumer/webtv/issues"
  },
  "homepage": "https://github.com/konsumer/webtv#readme",
  "dependencies": {
    "body-parser": "^1.17.2",
    "cors": "^2.8.3",
    "express": "^4.15.3",
    "liteiptv": "^0.1.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-image-fallback": "^5.0.0",
    "react-player": "^0.18.0",
    "react-redux": "^5.0.5",
    "redux": "^3.7.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babili-webpack-plugin": "^0.1.1",
    "cross-env": "^5.0.1",
    "git-directory-deploy": "^1.5.1",
    "redux-devtools": "^3.4.0",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  },
  "babel": {
    "presets": [
      "env",
      "stage-0",
      "react"
    ]
  }
}
